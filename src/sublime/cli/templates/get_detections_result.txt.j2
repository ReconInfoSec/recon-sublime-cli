╔═══════════════════════════╗
║ <header>{{ "{:^25}".format("Results") }}</header> ║
╚═══════════════════════════╝

{%- if verbose %}
{%- for result in results %}
<bold>DETECTION {{ loop.index }}</bold>
{%- if result.active %}
<key>Status: </key><green>Active</green>
{%- else %}
<key>Status: </key><light-red>Inactive</light-red>
{%- endif %}
{%- if result.name %}
<key>Name: </key><light-yellow>{{ result.name }}</light-yellow>
{%- endif %}
<key>ID: </key><dim>{{ result.detection_id }}</dim>
<key>Created: </key><dim>{{ result.created_at }}</dim>
<key>Updated: </key><dim>{{ result.updated_at }}</dim>
<key>Detection:</key> 
<bold>{{ result.detection }}</bold>
{{ "" }}
{%- endfor %}

{%- else %}
{%- for result in results %}
{%- if result.active %}
Detection <bold>{{ result.name }}</bold> <green>active</green>. Detection ID: {{ result.detection_id }}
{%- else %}
Detection <bold>{{ result.name }}</bold> <light-red>inactive</light-red>. Detection ID: {{ result.detection_id }}
{%- endif %}
{%- endfor %}
{%- endif %}
