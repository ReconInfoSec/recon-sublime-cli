║ <header>{{ "{:^25}".format("Results") }}</header> ║
╚═══════════════════════════╝

{%- for result in results %}
{%- if result.active %}
<success>Activated</success> <bold>{{ result.email_address }}.</bold> <success>User is protected by Sublime.</success>
{%- else %}
<fail>Deactivated</fail> <bold>{{ result.email_address }}.</bold> <fail>User is not protected by Sublime.</fail>
{%- endif %}
{%- endfor %}
